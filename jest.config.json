{
  "testEnvironment": "node",
  "testMatch": [
    "**/__tests__/tests/**/*.+(ts|tsx)",
    "**/?(*.)+(spec|test).+(ts|tsx|js)"
  ],
  "globals": {
    "ts-jest": {
      "isolatedModules": true
    }
  },
  "transform": { "\\.ts$": ["ts-jest"] },
  "modulePathIgnorePatterns": ["<rootDir>/dist/"],
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"]
}
